#! /usr/bin/bash

# Checks if any arguments were passed to the script
if [[ -n "$@" ]]; then
    # Combine all arguments into a single string
    input="$*"
else
    # Read input from stdin
    while IFS= read -r line
do
   input+="$line\n"
done
fi

# Call the `llm` command with the modified input
llm --system "You are a multilingual thesaurus. You give synonyms and antonyms for words in the language they are provided in." "$input"

