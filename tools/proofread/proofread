#! /usr/bin/bash

# Checks if any arguments were passed to the script
if [[ -n "$@" ]]; then
    # Combine all arguments into a single string
    input="$*"
else
    # Read input from stdin
    while IFS= read -r line
do
   input+="$line\n"
done
fi  

# Call the `llm` command with the modified input
llm --system "You are an expert writer and grammarian. Identify any errors in grammar, syntax, and overall structure in the provided text or sentence. Provide a correction, and explain the reasoning behind it. Be certain to respond in the same language as the provided text. Be concise." "$input"

